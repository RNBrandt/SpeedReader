<div class="container">
  <div class="jumbotron">
    <div id="website-input" class="center-block">
      <form id="url" class="form-group"  method="post" action="/websites">
        <h3>Directions to SpeedReed</h3>
        <h5>- Input a website like the sample below (including 'http://') and press 'Submit'</h6>
        <h5>- Use the slider to choose the speed at which the words will flash through the text box, an average person reads 200 words per minute (wpm)</h6>
        <h5>- Press pause to pause the text, or stop to reload this page and enter the next page to SpeedReed</h6>
        <input name="url" type="text" class="form-control" value="http://www.bbc.com/news/magazine-35261648">
        <button type="submit" id="input-submit"class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="hidden center-block" id="reading">
      <div class="text-center" id="ready-to-read">
        <h3 id="title"> </h3>
      </div>
      <div class="panel panel-default center-block">
        <H1> <div id="text-object"class="text-center"></div>
        </H1>
      </div>
      <form id="WPM">
        <input type="range" name="amountRange" id="slider" min="100" max="600" value="100" oninput="this.form.amountInput.value=this.value" />
        <input type="number" id="wpmBox"name="amountInput" min="100" max="600" value="100" oninput="this.form.amountRange.value=this.value" /> Words Per Minute
        <div class="btn-group">
          <button type="button" class="btn btn-success btn-lg"  id="start-button">
            Start Reading!
          </button>
        <!-- </div> -->

        <!-- <div class="btn-group"> -->
          <button type="button" class="btn btn-warning btn-lg hidden"  id="pause">
            Pause
          </button>
        <!-- </div> -->

         <!-- <div class="btn-group"> -->
          <button type="button" class="btn btn-danger btn-lg hidden"  id="stop">
            Stop
          <!-- </button> -->
        </div>
      </form>
    </div>
  </div>
  <!-- jumbotron -->
</div>
<!-- container -->


